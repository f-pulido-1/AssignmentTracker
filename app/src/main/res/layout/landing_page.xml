<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="410dp"
        android:layout_height="250dp"
        android:paddingTop="30dp"
        android:src="@drawable/cortana"
        tools:ignore="MissingConstraints" />

<!--    THIS TEXT VIEW SHOULD HOLD THE VALUE OF USERNAME-->
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome {INSERT_NAME_HERE}\nWhat can I help you with today"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/mainLoginButton"
        android:layout_width="175dp"
        android:layout_height="60dp"
        android:layout_marginBottom="320dp"
        android:text="Add Assignment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.46" />

    <Button
        android:id="@+id/mainSignUpButton"
        android:layout_width="175dp"
        android:layout_height="60dp"
        android:layout_marginBottom="192dp"
        android:text="Enter Grade"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainLoginButton"
        app:layout_constraintVertical_bias="0.574" />



</androidx.constraintlayout.widget.ConstraintLayout>